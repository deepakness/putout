---
layout: base.njk
---
<div class="container mx-auto px-4 py-12">
    <!-- Hero section -->
    <div class="{% if site.coverImage %}flex flex-col lg:flex-row gap-10 lg:gap-14 items-start{% else %}max-w-3xl{% endif %} mb-16">
        {% if site.coverImage %}
        <!-- Cover image -->
        <div class="w-full lg:w-1/3 flex-shrink-0">
            <img src="{{ site.coverImage }}" alt="{{ site.title }} cover" class="w-full lg:max-w-xs mx-auto lg:mx-0 h-auto rounded-xl shadow-lg" loading="lazy" width="320" height="480">
        </div>
        {% endif %}
        <!-- Book info -->
        <div class="{% if site.coverImage %}lg:w-2/3{% endif %}">
            <h1 class="text-2xl sm:text-4xl lg:text-5xl font-bold mb-4 font-heading leading-tight">{{ site.longTitle }}</h1>
            <p class="text-lg sm:text-xl mb-2 font-heading opacity-70">by {{ site.author }}</p>
            <p class="text-base sm:text-lg mb-8 leading-relaxed opacity-80">{{ site.description }}</p>
            <div class="flex flex-wrap gap-2 sm:gap-3">
                {% if collections.chapters.length %}
                <a href="{{ collections.chapters[0].url }}" class="bg-accent-600 text-white hover:bg-accent-700 shadow-sm inline-flex items-center gap-1.5 py-2 px-4 sm:py-3 sm:px-6 rounded-lg text-sm sm:text-base font-heading font-semibold transition-colors duration-300">
                    Start Reading
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                    </svg>
                </a>
                {% endif %}
                {% if site.formats.pdf %}
                <a href="/book.pdf" target="_blank" rel="noopener noreferrer" class="bg-white text-gray-700 border border-gray-300 hover:bg-gray-50 hover:border-accent-300 dark:bg-gray-700 dark:text-gray-200 dark:border-gray-600 dark:hover:bg-gray-600 dark:hover:border-accent-600 inline-flex items-center gap-1.5 py-2 px-4 sm:py-3 sm:px-5 rounded-lg text-sm sm:text-base font-heading font-medium transition-colors duration-300">
                    <i data-lucide="file-text" class="w-4 h-4"></i>
                    PDF
                </a>
                {% endif %}
                {% if site.formats.epub %}
                <a href="/book.epub" target="_blank" rel="noopener noreferrer" class="bg-white text-gray-700 border border-gray-300 hover:bg-gray-50 hover:border-accent-300 dark:bg-gray-700 dark:text-gray-200 dark:border-gray-600 dark:hover:bg-gray-600 dark:hover:border-accent-600 inline-flex items-center gap-1.5 py-2 px-4 sm:py-3 sm:px-5 rounded-lg text-sm sm:text-base font-heading font-medium transition-colors duration-300">
                    <i data-lucide="book-open" class="w-4 h-4"></i>
                    EPUB
                </a>
                {% endif %}
            </div>
            <!-- Social icons -->
            <div class="flex gap-4 mt-6">
                {% for link in site.socialLinks %}
                    {% if link.url %}
                    <a href="{{ link.url }}" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-accent-600 dark:hover:text-accent-400 transition-colors duration-200" aria-label="Visit us on {{ link.platform }}">
                        {% if link.platform == "twitter" %}
                            <i data-lucide="twitter" class="w-5 h-5"></i>
                        {% elif link.platform == "github" %}
                            <i data-lucide="github" class="w-5 h-5"></i>
                        {% elif link.platform == "linkedin" %}
                            <i data-lucide="linkedin" class="w-5 h-5"></i>
                        {% else %}
                            <i data-lucide="globe" class="w-5 h-5"></i>
                        {% endif %}
                    </a>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>

    <!-- Chapters section -->
    <div>
        <div class="grid gap-5 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
            {%- for chapter in collections.chapters -%}
                {% include "chapterCard.njk" %}
            {%- endfor -%}
        </div>
    </div>
</div>
